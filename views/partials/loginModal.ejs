<div class="loginModal-container">
    <div class="loginModal-box">
        <form class="loginModal-box-form" id="loginForm" action="/loggin" method="post">
            <h1 class="loginModal-h1">Le Quizz de la généralité</h1>
            <img src="Images/circle.png" class="loginModal-img" alt="">
            <table>
                <tr>
                    <td align="center" colspan="2">Nom utilisateur : <input name="pseudo" type="text"
                            class="loginModal-user-input" placeholder="Nom d'utilisateur" id="userLog-name"></td>
                </tr>
                <tr>
                    <td align="center" colspan="2">Mot de passe : <input name="pwd" type="password"
                            class="loginModal-user-input" placeholder="Mot de passe" id="userLog-pwd">
                        <p class="loginModal-box-form-footer">Vous n'avez pas de compte ? créer en un <a
                                href="/login">ici</a> !</p>
                    </td>

                </tr>
                <tr>
                    <td align="center"><input type="submit" value=" Se connecter" class="loginModal-button"
                            id="check-button"></td>
                    <td align="center"><input type="reset" value="Annuler" class="loginModal-button"></td>
                </tr>
            </table>
            <img src="Images/circle.png" class="loginModal-img" alt="">
        </form>
    </div>
</div>