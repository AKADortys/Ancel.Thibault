<form action="/CategCreate" class="quiz-create" method="post">
    <h1>Création d'une catégorie :</h1>
    <table>
        <tr>
            <td>
                Nom catégorie :
            </td>
            <td>
                <input class="champ-form" type="text" minlength="1" maxlength="50" name="designation"
                    placeholder="nom de la catégorie">
            </td>
        </tr>
        <tr>
            <td>
                Description :
            </td>
            <td>
                <textarea class="champ-form" name="description" cols="30" rows="10" maxlength="200"
                    placeholder="description de la catégorie"></textarea>
            </td>
        </tr>
        <tr>
            <td align="center">
                <input type="submit" value="Validé !" class="Boutton-form">
            </td>
            <td align="center">
                <input type="reset" value="Annuler" class="Boutton-form">
            </td>
        </tr>
    </table>
</form>